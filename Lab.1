// Realizar la suma hasta N de los numerous impares
include "stdafx.h"
#include <iostream>
#include <stdio.h>
#include <conio.h>
using namespace std;
int obtenerSumaImparesHastaN(int n);
int main()
{
	int n;	
	cout << endl << " Ingrese N: ";
	cin >> n;
	int suma = obtenerSumaImparesHastaN(n);	
	cout << endl << " La suma de los impres hasta N es = " << suma;
	getch();
	return 0;
}
int obtenerSumaImparesHastaN(int n)
{
	int suma = 0;
	for(int i = 1; i <= n; i++)
	{
		if((i % 2) != 0)
		{
			suma = suma + i;
		}
	}
	return suma;
}

